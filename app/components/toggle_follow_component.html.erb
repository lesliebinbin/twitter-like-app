<% unless current_user?(@user) %>
    <div id="follow_form">
        <% if current_user.following?(@user) %>
            <%= render(UserAction::UnfollowComponent.new(user: @user)) %>
        <% else %>
            <%= render(UserAction::FollowComponent.new(user: @user)) %>
        <% end %>
    </div>
<% end %>
